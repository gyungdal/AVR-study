#include <io.h>
#include <delay.h>  
#include <interrupt.h>
unsigned char i;

interrupt [EXT_INT0] void ext_int0(void){
    i++;
}
void main(void){
EIMSK = 0x00;
EICRA = 0x03;
SREG = 0x80;
DDRA = 0xff;
DDRD = 0x00;         
i = 0x00;
    while(1){
        if(i >= 99){
            i= 0x00;
        }
        PORTA = (((i / 10) << 4) | (i % 10));
        delay_ms(300);
    }
}

